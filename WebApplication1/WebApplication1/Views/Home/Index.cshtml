@model IEnumerable<WebApplication1.Models.Item>
@{ ViewData["Title"] = "Home Page"; 
    Layout = "~/Views/Shared/_Layout.cshtml"; }



<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox" style=" margin:auto; width:196px; height: 196px !important;">
        <div class="carousel-item active">
            <img class="d-block w-100 img-fluid" src="images\img4.jpg" alt="Responsive image">
        </div>
        <div class="carousel-item ">
            <img class="d-block w-100 img-fluid" src="images\img6.jpg" alt="Responsive image">
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    <div class="text-center">
        <h1 class="display-4"style="font-family:'Century Gothic'">Welcome to the Football Store</h1>
        <br />
        <p>Please register an account to start shopping.</p>
        <br />
        <p>WHAT'S HOT</p>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem; margin: auto;">
                    <img class="card-img-top" src=@item.Pic alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"style="font-family:'Century Gothic'">@item.ItemName</h5>
                        
                        <a href="~/User/Login" class="btn btn-primary"style="font-family:'Century Gothic'">Login to shop</a>
                    </div>
                </div>
            }
        </div>

